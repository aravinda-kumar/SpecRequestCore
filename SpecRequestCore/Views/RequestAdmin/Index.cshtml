@model IEnumerable<Request>

<div class="row mt-5">
    <table class="table table-hover table-sm">
        <tr><th>Id</th><th>Name</th><th>Requestor</th><th>Status</th><th>Date Requested</th><th>Assigned To</th><th>Actions</th></tr>
        @foreach (var request in Model)
        {
        <tr>
            <td class="align-middle">@request.Id</td>
            <td class="align-middle">@request.Name</td>
            <td class="align-middle">@request.User.Email</td>
            <td class="align-middle">@request.RequestStatus.Status</td>
            <td class="align-middle">@request.RequestCreated</td>
            <td class="align-middle">
                @if (string.IsNullOrEmpty(request.ReviewerId))
                {
                    <span class="text-danger">Not Assigned.</span>
                }
                else
                {
                    @request.Reviewer.Email    
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@request.Id" class="btn btn-success btn-sm"><i class="fa fa-pencil-alt"></i></a>
                <a href="#" class="btn btn-danger btn-sm"><i class="fa fa-trash-alt"></i></a>
            </td>
        </tr>
        }
    </table>
</div>