@model IEnumerable<Request>

<div class="row mt-5">
    <table class="table table-hover table-sm">
        <tr><th>Id</th><th>Name</th><th>Requestor</th><th>Status</th><th>Date Requested</th><th>Actions</th></tr>
        @foreach (var request in Model)
        {
        <tr>
            <td class="align-middle">@request.Id</td>
            <td class="align-middle">@request.Name</td>
            <td class="align-middle">@request.User.Email</td>
            <td class="align-middle">@request.RequestStatus.Status</td>
            <td class="align-middle">@request.RequestCreated</td>
            <td>
                <a href="#" class="btn btn-success btn-sm"><i class="fa fa-pencil-alt"></i></a>
                <a href="#" class="btn btn-danger btn-sm"><i class="fa fa-trash-alt"></i></a>
            </td>
        </tr>
        }
    </table>
</div>