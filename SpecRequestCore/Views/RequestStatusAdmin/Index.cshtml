@model IEnumerable<RequestStatus>


<div class="row mt-5">
    <div class="col-md-4 mx-auto">
    @if (Model.Count() == 0)
    {
        <div class="row">
            <p class="text-danger">There are no statuses defined.</p>
        </div>

    }
    else
    {
        <table class="table table-bordered table-condensed">
            <tr>
                <th>Status</th>
            </tr>

            @foreach (var requestStatus in Model)
            {
                <tr><td>@requestStatus.Status</td></tr>
            }
        </table>
    }
        <a asp-action="Create" class="btn btn-primary btn-block">Create</a>
    </div>
</div>